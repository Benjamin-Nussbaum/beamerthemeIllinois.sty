\mode<presentation>

% Illinois colors from https://brand.illinois.edu/visual-identity/color
\definecolor{Illiniblue}{HTML}{13294B}
\definecolor{Illiniorange}{HTML}{FF5F05}
\definecolor{Illiniharvest}{HTML}{FCB316}

\setbeamercolor{normal text}{fg=Illiniblue,bg=white}
\setbeamercolor{alerted text}{fg=Illiniorange}
\setbeamercolor{progress bar}{parent=alerted text,bg=Illiniharvest}

\setbeamercolor{section in head/foot}
{
    use=normal text,
    fg=normal text.bg,
    bg=normal text.fg
}

\mode
<all>
