\DeclareOptionBeamer{nav}{\PassOptionsToPackage{nav}{beamerouterthemeIllinois}}
\ProcessOptionsBeamer

\mode<presentation>

% Start with metropolis as a base theme
\usecolortheme[block=fill]{metropolis}
\useinnertheme[sectionpage=none]{metropolis}

% Hack to prevent metropolis from clearing the format in the appendix
\let\ABDorig\AtBeginDocument % Save to restore later
\renewcommand\AtBeginDocument[1]{} % Delete
\useoutertheme[progressbar=frametitle,numbering=fraction]{metropolis}
\renewcommand\AtBeginDocument[1]{\ABDorig{#1}} % Restore

\usecolortheme{Illinois}
\useinnertheme{Illinois}
\useoutertheme{Illinois}

\mode
<all>